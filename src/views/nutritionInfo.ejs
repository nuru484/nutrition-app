<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/styles/tailwindOut.css" rel="stylesheet" />
    <title>Nutrition Info</title>
  </head>
  <body class="bg-gray-100 overflow-x-hidden">
    <main class="container mx-auto p-8 mb-8">
      <h1 class="text-3xl font-semibold mb-6">Your Nutrition Info</h1>

      <!-- Nutrition Summary -->
      <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">
          Today's Totals
        </h2>
        <div class="grid grid-cols-4 gap-4">
          <div class="bg-green-100 text-green-800 p-4 rounded-lg text-center">
            <p class="text-lg font-semibold">Calories</p>
            <p class="text-2xl font-bold"><%= totalCalories %> kcal</p>
          </div>
          <div class="bg-blue-100 text-blue-800 p-4 rounded-lg text-center">
            <p class="text-lg font-semibold">Protein</p>
            <p class="text-2xl font-bold"><%= totalProtein %> g</p>
          </div>
          <div class="bg-yellow-100 text-yellow-800 p-4 rounded-lg text-center">
            <p class="text-lg font-semibold">Carbohydrates</p>
            <p class="text-2xl font-bold"><%= totalCarbs %> g</p>
          </div>
          <div class="bg-red-100 text-red-800 p-4 rounded-lg text-center">
            <p class="text-lg font-semibold">Fat</p>
            <p class="text-2xl font-bold"><%= totalFat %> g</p>
          </div>
        </div>
      </div>

      <!-- Nutrition Data Table -->
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">
          Nutritional Data
        </h2>
        <table class="min-w-full table-auto border-collapse">
          <thead>
            <tr class="bg-gray-200 text-gray-700">
              <th class="px-4 py-2">Date</th>
              <th class="px-4 py-2">Calories</th>
              <th class="px-4 py-2">Protein</th>
              <th class="px-4 py-2">Carbohydrates</th>
              <th class="px-4 py-2">Fat</th>
            </tr>
          </thead>
          <tbody>
            <% nutritionalTableData.forEach((day) => { %>
            <tr class="border-t">
              <td class="px-4 py-2"><%= day.date %></td>
              <td class="px-4 py-2"><%= day.calories %> kcal</td>
              <td class="px-4 py-2"><%= day.protein %> g</td>
              <td class="px-4 py-2"><%= day.carbohydrates %> g</td>
              <td class="px-4 py-2"><%= day.fat %> g</td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr class="bg-gray-200 font-bold text-gray-700">
              <td class="px-4 py-2">Total</td>
              <td class="px-4 py-2">
                <%= nutritionalTableData.reduce((sum, day) => sum +
                day.calories, 0) %> kcal
              </td>
              <td class="px-4 py-2">
                <%= nutritionalTableData.reduce((sum, day) => sum + day.protein,
                0).toFixed(2) %> g
              </td>
              <td class="px-4 py-2">
                <%= nutritionalTableData.reduce((sum, day) => sum +
                day.carbohydrates, 0).toFixed(2) %> g
              </td>
              <td class="px-4 py-2">
                <%= nutritionalTableData.reduce((sum, day) => sum + day.fat,
                0).toFixed(2) %> g
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </main>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="styles/tailwindOut.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <title>Meals Directory - NutriApp</title>
  <style>
    :root {
      --primary-500: 59 130 246;
      --primary-600: 37 99 235;
      --primary-700: 29 78 216;
      --success-500: 34 197 94;
      --success-600: 22 163 74;
      --warning-500: 245 158 11;
      --warning-600: 234 179 8;
      --danger-500: 239 68 68;
      --danger-600: 220 38 38;
      --gray-50: 249 250 251;
      --gray-100: 243 244 246;
      --gray-900: 17 24 39;
      --purple-500: 168 85 247;
      --purple-600: 147 51 234;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, rgb(248 250 252) 0%, rgb(241 245 249) 100%);
      min-height: 100vh;
    }

    .meal-card {
      background: white;
      border-radius: 24px;
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(229, 231, 235, 0.8);
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      height: 100%;
      position: relative;
    }

    .meal-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, rgb(59 130 246) 0%, rgb(34 197 94) 33%, rgb(245 158 11) 66%, rgb(168 85 247) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .meal-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15), 0 10px 20px -6px rgba(0, 0, 0, 0.05);
      border-color: rgba(59, 130, 246, 0.2);
    }

    .meal-card:hover::before {
      opacity: 1;
    }

    .meal-image-container {
      position: relative;
      height: 220px;
      overflow: hidden;
    }

    .meal-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .meal-card:hover .meal-image {
      transform: scale(1.1);
    }

    .calorie-badge {
      position: absolute;
      top: 16px;
      right: 16px;
      background: linear-gradient(135deg, rgb(239 68 68) 0%, rgb(220 38 38) 100%);
      color: white;
      padding: 0.75rem 1.25rem;
      border-radius: 9999px;
      font-size: 0.875rem;
      font-weight: 700;
      box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .nutrient-card {
      background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, rgba(22, 163, 74, 0.03) 100%);
      border: 1px solid rgba(34, 197, 94, 0.15);
      border-radius: 16px;
      padding: 1rem;
      text-align: center;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .nutrient-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(34, 197, 94, 0.05), transparent);
      transition: left 0.6s ease;
    }

    .nutrient-card:hover::before {
      left: 100%;
    }

    .nutrient-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(34, 197, 94, 0.15);
      border-color: rgba(34, 197, 94, 0.3);
    }

    .nutrient-card.protein {
      background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(22, 163, 74, 0.05) 100%);
      border-color: rgba(34, 197, 94, 0.2);
    }

    .nutrient-card.carbs {
      background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(234, 179, 8, 0.05) 100%);
      border-color: rgba(245, 158, 11, 0.2);
    }

    .nutrient-card.fat {
      background: linear-gradient(135deg, rgba(168, 85, 247, 0.08) 0%, rgba(147, 51, 234, 0.05) 100%);
      border-color: rgba(168, 85, 247, 0.2);
    }

    .nutrient-card.total {
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(37, 99, 235, 0.05) 100%);
      border-color: rgba(59, 130, 246, 0.2);
    }

    .stats-card {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      text-align: center;
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(229, 231, 235, 0.8);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .stats-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-500), var(--success-500), var(--warning-500), var(--purple-500));
      background-size: 300% 300%;
      animation: gradientShift 3s ease infinite;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    .stats-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1), 0 8px 16px -6px rgba(0, 0, 0, 0.05);
    }

    .floating-elements {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
      overflow: hidden;
    }

    .floating-element {
      position: absolute;
      opacity: 0.03;
      animation: float 25s infinite linear;
    }

    .floating-element:nth-child(1) {
      top: 15%;
      left: 5%;
      animation-delay: 0s;
      background: radial-gradient(circle, rgba(34,197,94,0.4) 0%, transparent 70%);
    }

    .floating-element:nth-child(2) {
      top: 50%;
      right: 10%;
      animation-delay: 8s;
      background: radial-gradient(circle, rgba(245,158,11,0.4) 0%, transparent 70%);
    }

    .floating-element:nth-child(3) {
      bottom: 25%;
      left: 15%;
      animation-delay: 16s;
      background: radial-gradient(circle, rgba(168,85,247,0.4) 0%, transparent 70%);
    }

    @keyframes float {
      0% {
        transform: translateY(0px) rotate(0deg);
        opacity: 0.03;
      }
      50% {
        transform: translateY(-25px) rotate(180deg);
        opacity: 0.06;
      }
      100% {
        transform: translateY(0px) rotate(360deg);
        opacity: 0.03;
      }
    }

    @media (max-width: 768px) {
      .meal-card {
        margin-bottom: 1.5rem;
      }
      
      .nutrient-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
      }
      
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }
    }

    @media (max-width: 480px) {
      .stats-grid {
        grid-template-columns: 1fr;
      }
      
      main {
        padding: 1rem;
      }
      
      .meal-image-container {
        height: 180px;
      }
    }

    .description-text {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      line-height: 1.6;
      color: rgb(71 85 105);
    }
  </style>
</head>
<body class="relative">
  <!-- Floating Background Elements -->
  <div class="floating-elements">
    <div class="floating-element" style="width: 120px; height: 120px; border-radius: 50%;"></div>
    <div class="floating-element" style="width: 80px; height: 80px; border-radius: 50%;"></div>
    <div class="floating-element" style="width: 100px; height: 100px; border-radius: 50%;"></div>
  </div>

  <main class="container mx-auto relative z-10 pt-8 pb-12 px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="text-center mb-16 lg:mb-20 max-w-6xl mx-auto">
      <div class="inline-flex items-center justify-center w-24 h-24 sm:w-28 sm:h-28 bg-gradient-to-br from-emerald-500 via-green-600 to-teal-700 rounded-full mb-8 shadow-2xl">
        <i class="fas fa-utensils text-3xl sm:text-4xl text-white"></i>
      </div>
      
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black bg-gradient-to-r from-slate-900 via-emerald-800 to-green-900 bg-clip-text text-transparent mb-6 leading-tight">
        Meals Directory
        <span class="block bg-gradient-to-r from-emerald-600 via-teal-600 to-green-700 bg-clip-text text-transparent mt-2">
          Complete Nutrition Guide
        </span>
      </h1>
      
      <p class="text-xl sm:text-2xl text-slate-600 max-w-5xl mx-auto leading-relaxed px-4">
        Discover our comprehensive collection of delicious, nutrient-dense meals with detailed 
        nutritional breakdowns, cooking instructions, and dietary recommendations for optimal health.
      </p>

      <div class="mt-10 flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center flex-wrap">
        <div class="flex items-center gap-3 text-sm font-semibold text-slate-700 bg-white/80 backdrop-blur-sm px-6 py-3 rounded-2xl shadow-lg border border-slate-200/50">
          <i class="fas fa-balance-scale text-green-500"></i>
          <span>Perfectly Balanced Nutrition</span>
        </div>
        <div class="flex items-center gap-3 text-sm font-semibold text-slate-700 bg-white/80 backdrop-blur-sm px-6 py-3 rounded-2xl shadow-lg border border-slate-200/50">
          <i class="fas fa-fire text-orange-500"></i>
          <span>Calorie Optimized</span>
        </div>
        <div class="flex items-center gap-3 text-sm font-semibold text-slate-700 bg-white/80 backdrop-blur-sm px-6 py-3 rounded-2xl shadow-lg border border-slate-200/50">
          <i class="fas fa-leaf text-emerald-500"></i>
          <span>Whole Food Ingredients</span>
        </div>
      </div>
    </div>

    <!-- Meals Grid -->
    <div class="meals-container mb-16">
      <% if (meals && meals.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6 lg:gap-8">
          <% meals.forEach(meal => { %>
            <article class="meal-card group cursor-pointer" onclick="viewMeal('<%= meal.name %>')">
              <!-- Meal Image -->
              <div class="meal-image-container">
                <img
                  src="/photos/meals/<%= meal.photo %>"
                  alt="<%= meal.name %>"
                  class="meal-image"
                  onerror="this.src='/photos/meals/placeholder.jpg'"
                  loading="lazy"
                />
                <div class="calorie-badge shadow-lg">
                  <i class="fas fa-fire mr-2"></i>
                  <%= meal.calories %> kcal
                </div>
                
                <!-- Quick Action Buttons -->
                <div class="absolute bottom-4 left-4 right-4 flex justify-between opacity-0 group-hover:opacity-100 transition-all duration-300">
                  <button class="w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg hover:shadow-xl flex items-center justify-center transition-all duration-300 hover:scale-110">
                    <i class="fas fa-heart text-red-500 text-sm"></i>
                  </button>
                  <button class="w-10 h-10 bg-gradient-to-r from-emerald-500 to-green-600 text-white rounded-full shadow-lg hover:shadow-xl flex items-center justify-center transition-all duration-300 hover:scale-110">
                    <i class="fas fa-plus text-sm"></i>
                  </button>
                </div>
              </div>

              <!-- Meal Content -->
              <div class="p-6">
                <!-- Meal Name -->
                <h2 class="text-xl sm:text-2xl font-bold text-slate-900 mb-4 line-clamp-2 group-hover:text-emerald-600 transition-colors duration-300">
                  <%= meal.name %>
                </h2>

                <!-- Description -->
                <% if (meal.description && meal.description.trim() !== '') { %>
                  <p class="description-text text-sm leading-relaxed mb-6">
                    <%= meal.description %>
                  </p>
                <% } else { %>
                  <p class="text-sm text-slate-500 italic mb-6">
                    <i class="fas fa-info-circle mr-2"></i>
                    Detailed recipe and preparation instructions available
                  </p>
                <% } %>

                <!-- Nutritional Information Grid -->
                <div class="nutrient-grid grid grid-cols-2 gap-4 mb-6">
                  <!-- Protein -->
                  <div class="nutrient-card protein">
                    <div class="text-2xl lg:text-3xl font-black text-green-600 mb-1">
                      <%= meal.protein %>
                    </div>
                    <div class="text-xs font-semibold text-green-700 uppercase tracking-wider flex items-center justify-center gap-1">
                      <i class="fas fa-dumbbell"></i>
                      Protein
                    </div>
                  </div>

                  <!-- Carbohydrates -->
                  <div class="nutrient-card carbs">
                    <div class="text-2xl lg:text-3xl font-black text-amber-600 mb-1">
                      <%= meal.carbohydrates %>
                    </div>
                    <div class="text-xs font-semibold text-amber-700 uppercase tracking-wider flex items-center justify-center gap-1">
                      <i class="fas fa-carrot"></i>
                      Carbs
                    </div>
                  </div>
                </div>

                <div class="nutrient-grid grid grid-cols-2 gap-4">
                  <!-- Fat -->
                  <div class="nutrient-card fat">
                    <div class="text-2xl lg:text-3xl font-black text-purple-600 mb-1">
                      <%= meal.fat %>
                    </div>
                    <div class="text-xs font-semibold text-purple-700 uppercase tracking-wider flex items-center justify-center gap-1">
                      <i class="fas fa-cheese"></i>
                      Fat
                    </div>
                  </div>

                  <!-- Total Macros -->
                  <div class="nutrient-card total col-span-2 sm:col-span-1">
                    <div class="text-xl lg:text-2xl font-black text-blue-600 mb-1">
                      <span class="text-3xl lg:text-4xl"><%= meal.protein + meal.carbohydrates + meal.fat %></span>g
                    </div>
                    <div class="text-xs font-semibold text-blue-700 uppercase tracking-wider flex items-center justify-center gap-1">
                      <i class="fas fa-chart-bar"></i>
                      Total Macros
                    </div>
                  </div>
                </div>
              </div>

              <!-- Action Footer -->
              <div class="px-6 pb-6 bg-gradient-to-r from-emerald-50 via-green-50 to-teal-50 border-t border-emerald-100/50">
                <div class="flex items-center justify-between">
                  <span class="text-sm font-semibold text-emerald-700 bg-emerald-100/60 backdrop-blur-sm px-4 py-2 rounded-full border border-emerald-200/50 inline-flex items-center gap-2">
                    <i class="fas fa-apple-alt"></i>
                    View Full Recipe
                  </span>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-full animate-pulse"></div>
                    <span class="text-xs text-slate-500 font-medium">Nutritious Meal</span>
                  </div>
                </div>
              </div>
            </article>
          <% }) %>
        </div>

        <!-- Statistics Section -->
        <div class="stats-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 mt-16">
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-emerald-600 mb-3"><%= meals.length %></div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Total Meals</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-emerald-500 to-green-600 rounded-full mx-auto"></div>
          </div>
          
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-green-600 mb-3">
              <%= Math.round(meals.reduce((sum, meal) => sum + meal.calories, 0) / meals.length) %> 
            </div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Avg Calories</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full mx-auto"></div>
          </div>
          
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-blue-600 mb-3">
              <%= Math.round(meals.reduce((sum, meal) => sum + meal.protein, 0) / meals.length) %>g
            </div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Avg Protein</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full mx-auto"></div>
          </div>
          
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-purple-600 mb-3">100%</div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Nutrition Verified</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-purple-500 to-violet-600 rounded-full mx-auto"></div>
          </div>
        </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="text-center py-20 px-6">
          <div class="mx-auto w-32 h-32 sm:w-40 sm:h-40 bg-gradient-to-br from-slate-100 to-slate-200 rounded-full flex items-center justify-center mb-8 shadow-xl">
            <i class="fas fa-utensils text-5xl sm:text-6xl text-slate-400"></i>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">No Meals Available</h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8 leading-relaxed">
            Our comprehensive meals directory is currently being populated with delicious, 
            nutrition-optimized recipes from our expert culinary team.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <button class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-emerald-600 to-green-600 text-white font-semibold rounded-2xl shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 text-lg">
              <i class="fas fa-refresh"></i>
              Refresh Meals
            </button>
            <button class="inline-flex items-center gap-3 px-8 py-4 bg-white text-slate-700 font-semibold rounded-2xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-200 text-lg">
              <i class="fas fa-clock"></i>
              Check Later
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </main>

  <script>
    function viewMeal(mealName) {
      alert(`Viewing details for: ${mealName}`);
  
    }

    // Add loading animation for cards
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.meal-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        setTimeout(() => {
          card.style.transition = 'all 0.7s cubic-bezier(0.4, 0, 0.2, 1)';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 150);
      });
    });

    // Add shimmer effect to nutrient cards on hover
    document.querySelectorAll('.nutrient-card').forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-3px) scale(1.02)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Image loading optimization
    document.querySelectorAll('img').forEach(img => {
      img.addEventListener('load', function() {
        this.style.opacity = '1';
      });
      img.style.opacity = '0';
      img.style.transition = 'opacity 0.3s ease';
    });
  </script>
</body>
</html>
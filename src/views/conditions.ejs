<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="styles/tailwindOut.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <title>Health Conditions Directory - NutriApp</title>
  <style>
    :root {
      --primary-500: 59 130 246;
      --primary-600: 37 99 235;
      --primary-700: 29 78 216;
      --success-500: 34 197 94;
      --warning-500: 245 158 11;
      --danger-500: 239 68 68;
      --gray-50: 249 250 251;
      --gray-100: 243 244 246;
      --gray-900: 17 24 39;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, rgb(248 250 252) 0%, rgb(241 245 249) 100%);
      min-height: 100vh;
    }

    .condition-card {
      background: white;
      border-radius: 24px;
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(229, 231, 235, 0.8);
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      height: 100%;
      position: relative;
    }

    .condition-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, rgb(59 130 246) 0%, rgb(147 51 234) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .condition-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15), 0 10px 20px -6px rgba(0, 0, 0, 0.05);
      border-color: rgba(59, 130, 246, 0.2);
    }

    .condition-card:hover::before {
      opacity: 1;
    }

    .condition-icon {
      width: 64px;
      height: 64px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      background: linear-gradient(135deg, rgb(59 130 246) 0%, rgb(147 51 234) 100%);
      box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
      transition: all 0.3s ease;
    }

    .condition-card:hover .condition-icon {
      transform: scale(1.1) rotate(5deg);
      box-shadow: 0 12px 25px rgba(59, 130, 246, 0.4);
    }

    .severity-badge {
      background: linear-gradient(135deg, rgb(239 68 68) 0%, rgb(220 38 38) 100%);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

    .description-text {
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
      overflow: hidden;
      line-height: 1.6;
      color: rgb(71 85 105);
    }

    .stats-card {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      text-align: center;
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(229, 231, 235, 0.8);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .stats-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-500), var(--success-500), var(--warning-500), var(--danger-500));
      background-size: 300% 300%;
      animation: gradientShift 3s ease infinite;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    .stats-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1), 0 8px 16px -6px rgba(0, 0, 0, 0.05);
    }

    @media (max-width: 768px) {
      .condition-card {
        margin-bottom: 1.5rem;
      }
      
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }
    }

    @media (max-width: 480px) {
      .stats-grid {
        grid-template-columns: 1fr;
      }
      
      main {
        padding: 1rem;
      }
    }

    .floating-elements {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
      overflow: hidden;
    }

    .floating-element {
      position: absolute;
      opacity: 0.05;
      animation: float 20s infinite linear;
    }

    .floating-element:nth-child(1) {
      top: 10%;
      left: 10%;
      animation-delay: 0s;
    }

    .floating-element:nth-child(2) {
      top: 60%;
      right: 10%;
      animation-delay: 5s;
    }

    .floating-element:nth-child(3) {
      bottom: 20%;
      left: 20%;
      animation-delay: 10s;
    }

    @keyframes float {
      0% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(180deg);
      }
      100% {
        transform: translateY(0px) rotate(360deg);
      }
    }
  </style>
</head>
<body class="relative">
  <!-- Floating Background Elements -->
  <div class="floating-elements">
    <div class="floating-element" style="width: 100px; height: 100px; background: radial-gradient(circle, rgba(59,130,246,0.3) 0%, transparent 70%); border-radius: 50%;"></div>
    <div class="floating-element" style="width: 60px; height: 60px; background: radial-gradient(circle, rgba(34,197,94,0.3) 0%, transparent 70%); border-radius: 50%;"></div>
    <div class="floating-element" style="width: 80px; height: 80px; background: radial-gradient(circle, rgba(245,158,11,0.3) 0%, transparent 70%); border-radius: 50%;"></div>
  </div>

  <main class="container mx-auto relative z-10 pt-8 pb-12 px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="text-center mb-16 lg:mb-20 max-w-6xl mx-auto">
      <div class="inline-flex items-center justify-center w-24 h-24 sm:w-28 sm:h-28 bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700 rounded-full mb-8 shadow-2xl">
        <i class="fas fa-stethoscope text-3xl sm:text-4xl text-white"></i>
      </div>
      
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black bg-gradient-to-r from-slate-900 via-blue-800 to-indigo-900 bg-clip-text text-transparent mb-6 leading-tight">
        Health Conditions
        <span class="block bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-700 bg-clip-text text-transparent mt-2">
          Directory
        </span>
      </h1>
      
      <p class="text-xl sm:text-2xl text-slate-600 max-w-4xl mx-auto leading-relaxed px-4">
        Comprehensive medical information about health conditions, symptoms, dietary considerations, 
        and personalized nutrition strategies for optimal health management.
      </p>

      <div class="mt-10 flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center">
        <div class="flex items-center gap-3 text-sm font-medium text-slate-700 bg-white/80 backdrop-blur-sm px-6 py-3 rounded-2xl shadow-lg border border-slate-200/50">
          <i class="fas fa-check-circle text-green-500"></i>
          <span>Medically Verified Information</span>
        </div>
        <div class="flex items-center gap-3 text-sm font-medium text-slate-700 bg-white/80 backdrop-blur-sm px-6 py-3 rounded-2xl shadow-lg border border-slate-200/50">
          <i class="fas fa-leaf text-green-500"></i>
          <span>Nutrition-Focused Recommendations</span>
        </div>
      </div>
    </div>

    <!-- Conditions Grid -->
    <div class="conditions-container mb-16">
      <% if (conditions && conditions.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6 lg:gap-8">
          <% conditions.forEach(condition => { %>
            <article class="condition-card group cursor-pointer" onclick="viewCondition('<%= condition.name %>')">
              <!-- Header -->
              <div class="p-6 pb-5 relative z-10">
                <div class="flex items-start justify-between mb-5">
                  <div class="condition-icon shrink-0">
                    <i class="fas fa-heartbeat text-white"></i>
                  </div>
                  <span class="severity-badge shadow-sm">
                    <i class="fas fa-info-circle mr-1"></i>
                    Common
                  </span>
                </div>
                
                <!-- Condition Name -->
                <h2 class="text-xl sm:text-2xl font-bold text-slate-900 mb-4 line-clamp-2 group-hover:text-blue-600 transition-colors duration-300">
                  <%= condition.name %>
                </h2>
                
                <!-- Description -->
                <% if (condition.description && condition.description.trim() !== '') { %>
                  <p class="description-text text-sm leading-relaxed">
                    <%= condition.description %>
                  </p>
                <% } else { %>
                  <p class="text-sm text-slate-500 italic mt-3">
                    <i class="fas fa-info-circle mr-1"></i>
                    Detailed description available
                  </p>
                <% } %>
              </div>
              
              <!-- Footer -->
              <div class="px-6 pb-6 pt-4 bg-gradient-to-r from-blue-50 via-indigo-50 to-purple-50 border-t border-blue-100/50">
                <div class="flex items-center justify-between">
                  <span class="text-sm font-semibold text-blue-700 bg-blue-100/60 backdrop-blur-sm px-4 py-2 rounded-full border border-blue-200/50 inline-flex items-center gap-2">
                    <i class="fas fa-apple-alt"></i>
                    View Dietary Guide
                  </span>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full animate-pulse"></div>
                    <span class="text-xs text-slate-500 font-medium">Health Condition</span>
                  </div>
                </div>
              </div>
            </article>
          <% }) %>
        </div>

        <!-- Statistics Section -->
        <div class="stats-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 mt-16">
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-blue-600 mb-3"><%= conditions.length %></div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Total Conditions</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full mx-auto"></div>
          </div>
          
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-green-600 mb-3">50+</div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Dietary Guidelines</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full mx-auto"></div>
          </div>
          
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-purple-600 mb-3">100%</div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Verified Data</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-purple-500 to-violet-600 rounded-full mx-auto"></div>
          </div>
          
          <div class="stats-card">
            <div class="text-4xl sm:text-5xl font-black text-orange-600 mb-3">24/7</div>
            <div class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Available</div>
            <div class="mt-3 w-20 h-1 bg-gradient-to-r from-orange-500 to-red-600 rounded-full mx-auto"></div>
          </div>
        </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="text-center py-20 px-6">
          <div class="mx-auto w-32 h-32 sm:w-40 sm:h-40 bg-gradient-to-br from-slate-100 to-slate-200 rounded-full flex items-center justify-center mb-8 shadow-xl">
            <i class="fas fa-database text-5xl sm:text-6xl text-slate-400"></i>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">No Conditions Available</h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8 leading-relaxed">
            Our comprehensive health conditions directory is currently being populated with verified medical information.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <button class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-2xl shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 text-lg">
              <i class="fas fa-refresh"></i>
              Refresh Data
            </button>
            <button class="inline-flex items-center gap-3 px-8 py-4 bg-white text-slate-700 font-semibold rounded-2xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-200 text-lg">
              <i class="fas fa-clock"></i>
              Check Later
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </main>

  <script>
    function viewCondition(conditionName) {
      // Implement condition detail view navigation
      alert(`Viewing details for: ${conditionName}`);
      // You can replace this with actual navigation
      // window.location.href = `/conditions/${conditionName.toLowerCase().replace(/\s+/g, '-')}`;
    }

    // Add loading animation for cards
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.condition-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
          card.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
</body>
</html>
<!-- views/mealPreparation.ejs -->
<!DOCTYPE html>
<html lang="en">
  <body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
      <!-- Meal Header Section -->
      <div class="bg-white rounded-lg shadow-lg mb-8 overflow-hidden">
        <div class="md:flex">
          <div class="p-8 mx-auto">
            <div class="flex items-center justify-between">
              <h1 class="text-2xl font-bold text-gray-900 mb-2">
                <%= prepDetails.meal.name %>
              </h1>
              <div class="flex items-center space-x-4">
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  <%= prepDetails.preparation.timeToMake %> mins
                </span>
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= prepDetails.preparation.difficulty === 'Easy' ? 'bg-green-100 text-green-800' : prepDetails.preparation.difficulty === 'Medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>"
                >
                  <%= prepDetails.preparation.difficulty %>
                </span>
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                    ></path>
                  </svg>
                  <%= prepDetails.preparation.servings %> servings
                </span>
              </div>
            </div>
            <p class="mt-4 text-gray-600">
              <%= prepDetails.meal.description %>
            </p>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Ingredients Section -->
        <div class="md:col-span-1">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <svg
                class="w-6 h-6 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                ></path>
              </svg>
              Ingredients
            </h2>
            <ul class="space-y-3">
              <% prepDetails.ingredients.forEach(ingredient => { %>
              <li class="flex items-center justify-between">
                <span class="text-gray-700"><%= ingredient.name %></span>
                <span class="text-gray-600 font-medium"
                  ><%= ingredient.amount %> <%= ingredient.unit %></span
                >
              </li>
              <% }); %>
            </ul>
          </div>

          <!-- Equipment Section -->
          <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <svg
                class="w-6 h-6 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"
                ></path>
              </svg>
              Equipment Needed
            </h2>
            <ul class="space-y-3">
              <% prepDetails.equipment.forEach(item => { %>
              <li class="flex items-center justify-between">
                <span class="text-gray-700"><%= item.name %></span>
                <% if (item.optional) { %>
                <span class="text-sm text-gray-500">(Optional)</span>
                <% } %>
              </li>
              <% }); %>
            </ul>
          </div>
        </div>

        <!-- Steps Section -->
        <div class="md:col-span-2">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-xl font-semibold mb-6 flex items-center">
              <svg
                class="w-6 h-6 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 14l-7 7m0 0l-7-7m7 7V3"
                ></path>
              </svg>
              Preparation Steps
            </h2>
            <div class="space-y-6">
              <% prepDetails.steps.forEach(step => { %>
              <div class="relative pl-8">
                <div
                  class="absolute left-0 top-0 rounded-full bg-blue-500 text-white w-6 h-6 flex items-center justify-center"
                >
                  <%= step.stepNumber %>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-gray-700"><%= step.description %></p>
                  <% if (step.timeInMinutes) { %>
                  <div class="mt-2 text-sm text-gray-500 flex items-center">
                    <svg
                      class="w-4 h-4 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      ></path>
                    </svg>
                    Approximately <%= step.timeInMinutes %> minutes
                  </div>
                  <% } %>
                </div>
              </div>
              <% }); %>
            </div>
          </div>

          <!-- Tips Section -->
          <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <svg
                class="w-6 h-6 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                ></path>
              </svg>
              Pro Tips
            </h2>
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg
                    class="h-5 w-5 text-yellow-400"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800">
                    Preparation Tips
                  </h3>
                  <ul
                    class="mt-2 text-sm text-yellow-700 list-disc list-inside"
                  >
                    <li>Read through all steps before starting</li>
                    <li>
                      Prepare all ingredients before cooking (mise en place)
                    </li>
                    <li>Keep an eye on cooking temperatures</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

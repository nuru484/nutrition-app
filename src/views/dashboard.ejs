<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="styles/tailwindOut.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/photos/logo.jpg" />
    <title><%= title %> - NutriApp</title>
    <style>
      body {
        overflow: hidden;
      }
      #sidebar {
        height: 100vh;
        width: 250px;
      }
      #main-container {
        height: 100vh;
        overflow-y: auto;
        padding: 2rem;
      }
      .sidebar-button {
        width: 100%;
      }
    </style>
  </head>
  <body class="bg-gray-100 flex">
    <aside
      id="sidebar"
      class="bg-blue-600 p-4 flex flex-col justify-between text-white"
    >
      <div>
        <div class="logo flex items-center mb-6">
          <img src="/photos/logo.jpg" class="w-10 h-10 mr-2" alt="App Logo" />
          <span class="text-2xl font-semibold">NutriApp</span>
        </div>

        <div class="mb-4">
          <input
            type="text"
            placeholder="Search..."
            class="w-full p-2 rounded bg-blue-500 text-white focus:outline-none"
          />
        </div>

        <nav>
          <ul class="flex flex-col space-y-2">
            <li>
              <a href="/dashboard">
                <button
                  id="dashboard"
                  class="sidebar-button bg-blue-700 hover:bg-blue-600 text-white py-2 rounded transition"
                >
                  Dashboard
                </button>
              </a>
            </li>
            <li>
              <button
                id="meals"
                class="sidebar-button bg-blue-500 hover:bg-blue-600 text-white py-2 rounded transition"
                onclick="loadContent('meals')"
              >
                Meals
              </button>
            </li>
            <li>
              <button
                id="exercise"
                class="sidebar-button bg-blue-500 hover:bg-blue-600 text-white py-2 rounded transition"
                onclick="loadContent('exercises')"
              >
                Recommended Meals
              </button>
            </li>
            <li>
              <button
                id="water"
                class="sidebar-button bg-blue-500 hover:bg-blue-600 text-white py-2 rounded transition"
                onclick="loadContent('water-consumption')"
              >
                User Health Conditions
              </button>
            </li>

            <li>
              <button
                id="water"
                class="sidebar-button bg-blue-500 hover:bg-blue-600 text-white py-2 rounded transition"
                onclick="loadContent('conditions')"
              >
                Health Conditions
              </button>
            </li>
          </ul>
        </nav>
      </div>
     
      <a
        href="/logout"
        class="bg-red-500 hover:bg-red-600 text-center text-white py-2 rounded transition mt-4"
      >
        <button>Logout</button>
      </a>
    </aside>

    <main id="main-container" class="flex-grow container mx-auto p-8">
      <h1 class="text-3xl font-semibold mb-6">Dashboard</h1>

      <!-- User Profile Section -->
      <section class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h2 class="text-2xl font-semibold mb-6">User Profile</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="space-y-3">
            <p class="text-gray-600"><strong>Name:</strong> <span class="font-medium"><%= user.name %></span></p>
            <p class="text-gray-600"><strong>Email:</strong> <span class="font-medium"><%= user.email %></span></p>
          </div>
          <div>
            <p class="text-gray-600 mb-4"><strong>Health Conditions:</strong></p>
            <% if (userConditions && userConditions.length > 0) { %>
              <div class="flex flex-wrap gap-2">
                <% userConditions.forEach(condition => { %>
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                    <%= condition.name %>
                  </span>
                <% }); %>
              </div>
            <% } else { %>
              <p class="text-gray-500 italic">No health conditions recorded</p>
            <% } %>
          </div>
        </div>
      </section>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Top 3 Recommended Meals Section -->
        <section class="bg-white p-6 rounded-lg shadow-lg">
          <h2 class="text-2xl font-semibold mb-6">Top 3 Recommended Meals</h2>
          <% if (recommendedMeals && recommendedMeals.length > 0) { %>
            <div class="space-y-4">
              <% recommendedMeals.forEach(recMeal => { %>
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
                  <div class="flex items-start space-x-4">
                    <img 
                      src="<%= recMeal.meal.photo %>" 
                      alt="<%= recMeal.meal.name %>" 
                      class="w-20 h-20 object-cover rounded-lg flex-shrink-0"
                    />
                    <div class="flex-grow min-w-0">
                      <h3 class="font-semibold text-lg mb-1 truncate"><%= recMeal.meal.name %></h3>
                      <p class="text-sm text-gray-600 mb-2 line-clamp-2"><%= recMeal.meal.description %></p>
                      <div class="flex flex-wrap gap-2 mb-3">
                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
                          For: <%= recMeal.condition.name %>
                        </span>
                        <% if (recMeal.score) { %>
                          <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">
                            Score: <%= recMeal.score %>/10
                          </span>
                        <% } %>
                      </div>
                      <% if (recMeal.reason) { %>
                        <p class="text-xs text-blue-600 italic mb-3"><%= recMeal.reason %></p>
                      <% } %>
                      <div class="flex flex-wrap gap-4 text-xs text-gray-600">
                        <span class="flex items-center"><span class="w-2 h-2 bg-orange-500 rounded-full mr-1"></span> <%= recMeal.meal.calories %> kcal</span>
                        <span class="flex items-center"><span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span> <%= recMeal.meal.protein %>g P</span>
                        <span class="flex items-center"><span class="w-2 h-2 bg-yellow-500 rounded-full mr-1"></span> <%= recMeal.meal.carbohydrates %>g C</span>
                        <span class="flex items-center"><span class="w-2 h-2 bg-purple-500 rounded-full mr-1"></span> <%= recMeal.meal.fat %>g F</span>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="text-center py-12">
              <p class="text-gray-500 text-lg">No recommended meals available</p>
              <p class="text-gray-400 text-sm mt-2">Add health conditions to get personalized recommendations</p>
            </div>
          <% } %>
        </section>

        <!-- Top 3 Meals Section -->
        <section class="bg-white p-6 rounded-lg shadow-lg">
          <h2 class="text-2xl font-semibold mb-6">Top 3 Available Meals</h2>
          <% if (topMeals && topMeals.length > 0) { %>
            <div class="space-y-4">
              <% topMeals.forEach(meal => { %>
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
                  <div class="flex items-start space-x-4">
                    <img 
                      src="<%= meal.photo %>" 
                      alt="<%= meal.name %>" 
                      class="w-20 h-20 object-cover rounded-lg flex-shrink-0"
                    />
                    <div class="flex-grow min-w-0">
                      <h3 class="font-semibold text-lg mb-1 truncate"><%= meal.name %></h3>
                      <p class="text-sm text-gray-600 mb-3 line-clamp-2"><%= meal.description %></p>
                      <div class="flex flex-wrap gap-4 text-xs text-gray-600">
                        <span class="flex items-center"><span class="w-2 h-2 bg-orange-500 rounded-full mr-1"></span> <%= meal.calories %> kcal</span>
                        <span class="flex items-center"><span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span> <%= meal.protein %>g P</span>
                        <span class="flex items-center"><span class="w-2 h-2 bg-yellow-500 rounded-full mr-1"></span> <%= meal.carbohydrates %>g C</span>
                        <span class="flex items-center"><span class="w-2 h-2 bg-purple-500 rounded-full mr-1"></span> <%= meal.fat %>g F</span>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="text-center py-12">
              <p class="text-gray-500 text-lg">No meals available</p>
            </div>
          <% } %>
        </section>
      </div>
    </main>

    <script type="text/javascript" src="/scripts/dashboardScripts.js"></script>
  </body>
</html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="styles/tailwindOut.css" rel="stylesheet" />
    <title>Your Water Consumption</title>
    <style>
      /* Modal background overlay */
      #waterModal {
        background-color: rgba(0, 0, 0, 0.6); /* Darker overlay */
      }

      /* Modal content styling */
      #waterModal .modal-content {
        width: 90%;
        max-width: 400px;
        background-color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        transform: translateY(-50px);
      }

      #modalMessage {
        color: #333; /* Darker text for contrast */
      }
    </style>
  </head>
  <body class="bg-gray-100 overflow-x-hidden">
    <main class="container mx-auto p-8">
      <h1 class="text-3xl font-semibold mb-6">
        Your Water Consumption Records
      </h1>

      <form
        action="/add-water"
        method="POST"
        class="mb-6 bg-white p-4 rounded-lg shadow-md"
        onsubmit="handleWaterConsume(event);"
      >
        <h2 class="text-xl font-semibold mb-4">Add Water Consumption</h2>
        <div class="mb-4">
          <label for="amount" class="block text-gray-700 font-semibold mb-2"
            >Amount (in liters):</label
          >
          <input
            type="number"
            min="0"
            value="0"
            name="amount"
            id="amount"
            required
            step="0.01"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>
        <button
          type="submit"
          class="w-full bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 transition-colors"
        >
          Add Water Consumption
        </button>
      </form>

      <h2 class="text-xl font-semibold mb-4">Previous Records</h2>
      <div class="bg-white rounded-lg shadow-md p-4">
        <% if (waterRecords.length > 0) { %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-200">
            <tr>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Date
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Amount (L)
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% waterRecords.forEach(record => { %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= new Date(record.recordedAt).toLocaleDateString() %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= record.amount.toFixed(2) %> L
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <button
                  class="text-red-600 hover:text-red-800"
                  onclick="handleDelete(event, 'water-consumption', '<%= record.id %>')"
                >
                  Delete
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <p class="text-gray-500">No water consumption records found.</p>
        <% } %>
      </div>
    </main>

    <!-- Modal -->
    <div
      id="waterModal"
      class="fixed inset-0 flex items-center justify-center z-50 hidden"
    >
      <div class="modal-content">
        <h2 id="modalMessage" class="text-lg font-semibold"></h2>
        <button
          id="closeModalButton"
          class="mt-4 w-full bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 transition-colors"
        >
          Close
        </button>
      </div>
    </div>
  </body>
</html>

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  password       String
  name           String          @unique
  userConditions UserCondition[]
}

model Meal {
  id               String            @id @default(cuid())
  name             String            @unique
  calories         Int
  protein          Float
  carbohydrates    Float
  fat              Float
  photo            String
  description      String
  recommendedMeals RecommendedMeal[]
}

model Condition {
  id               String            @id @default(cuid())
  name             String            @unique
  description      String?
  users            UserCondition[]
  recommendedMeals RecommendedMeal[]
}

model UserCondition {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  condition   Condition @relation(fields: [conditionId], references: [id], onDelete: Cascade)
  conditionId String
  createdAt   DateTime  @default(now())

  @@unique([userId, conditionId])
}

model RecommendedMeal {
  id          String    @id @default(cuid())
  condition   Condition @relation(fields: [conditionId], references: [id], onDelete: Cascade)
  conditionId String
  meal        Meal      @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId      String
  reason      String?
  score       Int?
  createdAt   DateTime  @default(now())

  @@unique([conditionId, mealId])
}
